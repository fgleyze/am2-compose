{% extends '@AppBundle/Admin/index.html.twig' %}

{% block body %}
    <h4>{{ agency.name }}</h4>

    {{ form_start(edit_form) }}
        <div class="form-group">
            {{ form_label(edit_form.name) }}
            {{ form_errors(edit_form.name) }}
            {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.catchword) }}
            {{ form_errors(edit_form.catchword) }}
            {{ form_widget(edit_form.catchword, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.description) }}
            {{ form_errors(edit_form.description) }}
            {{ form_widget(edit_form.description, { 'attr': {'class': 'form-control', 'rows': 10} }) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.phone) }}
            {{ form_errors(edit_form.phone) }}
            {{ form_widget(edit_form.phone, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.address) }}
            {{ form_errors(edit_form.address) }}
            {{ form_widget(edit_form.address, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.email) }}
            {{ form_errors(edit_form.email) }}
            {{ form_widget(edit_form.email, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.facebook) }}
            {{ form_errors(edit_form.facebook) }}
            {{ form_widget(edit_form.facebook, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.instagram) }}
            {{ form_errors(edit_form.instagram) }}
            {{ form_widget(edit_form.instagram, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.pinterest) }}
            {{ form_errors(edit_form.pinterest) }}
            {{ form_widget(edit_form.pinterest, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.image) }}
            {{ form_errors(edit_form.image) }}
            {{ form_widget(edit_form.image, { 'attr': {'class': 'form-control-file'} }) }}
        </div>

        <img src="{{ asset('upload/images/thumb_' ~ agency.imageName) }}" class="img-fluid"/>

        {{ form_widget(edit_form) }}

        <input type="submit" value="Save changes" class="btn btn-primary mt-4 mb-4"/>
    {{ form_end(edit_form) }}
{% endblock %}
